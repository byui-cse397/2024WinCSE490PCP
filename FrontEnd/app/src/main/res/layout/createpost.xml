<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/createpost"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background"
        android:textAlignment="center">

        <Button
            android:id="@+id/poster"
            style="@style/CustomButtonStyle"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="@string/submit"
            android:textSize="34sp"
            app:layout_constraintBottom_toTopOf="@+id/backtohome"
            app:layout_constraintEnd_toEndOf="@+id/CreatePostBox"
            app:layout_constraintStart_toStartOf="@+id/CreatePostBox"
            app:layout_constraintTop_toBottomOf="@+id/CreatePostBox" />

        <Button
            android:id="@+id/backtohome"
            style="@style/CustomButtonStyleRed"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="@string/cancel"
            android:textSize="20sp"
            app:layout_constraintBottom_toTopOf="@+id/nav_view"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/poster" />

        <TextView
            android:id="@+id/CreatePostPageTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/CpostTitle"
            android:textAlignment="center"
            android:textColor="#424242"
            android:textSize="48sp"
            app:layout_constraintBottom_toTopOf="@+id/nav_view"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.1"
            tools:ignore="TextSizeCheck" />

        <EditText
            android:id="@+id/CreatePostTitle"
            android:layout_width="@+id/CreatePostBox"
            android:layout_height="wrap_content"
            android:layout_marginBottom="28dp"
            android:autofillHints=""
            android:background="@drawable/rounded_border"
            android:ems="10"
            android:hint="@string/CpostName"
            android:inputType="text"
            android:textAlignment="center"
            android:textColorHint="#78909C"
            android:textSize="34sp"
            app:layout_constraintBottom_toTopOf="@+id/CreatePostBox"
            app:layout_constraintEnd_toEndOf="@+id/CreatePostBox"
            app:layout_constraintStart_toStartOf="@+id/CreatePostBox" />

        <EditText
            android:id="@+id/CreatePostBox"
            android:layout_width="360dp"
            android:layout_height="330dp"
            android:autofillHints=""
            android:background="@drawable/rounded_border"
            android:ems="10"
            android:hint="@string/Cpostdescription"
            android:inputType="textMultiLine"
            android:padding="12dp"
            android:textColorHint="#78909C"
            android:textSize="24sp"
            app:layout_constraintBottom_toTopOf="@+id/nav_view"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/CreatePostPageTitle"
            app:layout_constraintVertical_bias=".4" />

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/nav_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="?android:attr/windowBackground"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:menu="@menu/bottom_nav_menu" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>